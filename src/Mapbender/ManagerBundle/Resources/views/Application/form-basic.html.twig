{%- form_theme form _self -%}
{%- if false -%}
{%- block _application_screenshotFile_row -%}
    <div class="form-group no-gutters screenshot_upload">
        {{- form_label(form) -}}
        <div class="upload">
            <span class="button upload_button">
                {{ 'mb.manager.admin.application.upload.button' | trans }}
            </span>
            <span class="upload_label">
                {{ screenshot_filename | default('mb.manager.admin.application.upload.label' | trans) }}
            </span>
            {{- block('form_widget_simple') -}}
            {{- form_widget(form.parent.removeScreenShot) -}}
            {{- form_errors(form) -}}
        </div>
    </div>
{%- endblock %}
{%- endif -%}
<div class="col-xs-8">
    {%- if form.template is defined -%}
    {{ form_row(form.template) }}
    {%- endif -%}

    {{ form_row(form.title) }}
    {{ form_row(form.slug) }}
    {{- form_row(form.screenshotFile) -}}
    {{ form_row(form.map_engine_code) }}
    {{ form_row(form.description) }}
    {{ form_row(form.persistentView) }}
</div>
<div class="col-xs-4">
    {%- set _screenshot_src = screenshot | default('') %}
    <div class="screenshot_img{{ _screenshot_src is empty ? ' default' }}">
        <div class="cell_edit">
            <div class="delete button critical hidden">X</div>
            <img alt="Load" data-load=true class="screenshot" src="{{ _screenshot_src }}" />
            <i class="iconAppDefault"></i>
        </div>
    </div>
</div>
