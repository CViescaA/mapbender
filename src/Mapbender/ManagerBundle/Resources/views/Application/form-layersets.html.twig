<a href="{{ path("mapbender_manager_application_newlayerset",{'slug': application.slug}) }}" class="iconAdd right addLayerset iconBig" title="{{ 'mb.manager.admin.layerset.add' | trans}}"></a>
{% if application.layersets|length > 0 %}
  {% include 'MapbenderManagerBundle::fragments/filter-group.html.twig' with {filterTargetId: 'all-instances'} %}
  <ul id="all-instances">
    {% for layerset in application.layersets %}
      <li class="filterItem">
        <table class="application-component-table table-condensed layersetTable" data-id="{{ layerset.id }}">
          <thead>
            <tr class='doNotFilter'>
              <th colspan="4">
                <h3 class="subTitle">{{ layerset.title }}</h3>
              </th>
            </tr>
            <tr class='doNotFilter'>
              <th title="{{ 'mb.manager.admin.layerset.id_description' | trans }}">{{ 'mb.manager.admin.layerset.id' | trans }}</th>
              <th>{{ 'mb.manager.admin.layerset.title' | trans }}</th>
              <th>{{ 'mb.manager.admin.layerset.type' | trans }}</th>
              <th class="iconColumn text-right">
                <a class="iconAdd hover-highlight-effect addInstance" title="{{"mb.manager.admin.instance.add"|trans}}" href="{{ path("mapbender_manager_application_listsources",{'slug': application.slug, 'layersetId': layerset.id}) }}" data-layerset-title="{{ layerset.title }}"></a>
                {#- this comment eats whitespace -#}
                <a class="iconEdit hover-highlight-effect editLayerset" title="{{"mb.manager.admin.layerset.edit"|trans}} {{layerset.title}}" href="{{ path("mapbender_manager_application_editlayerset",{'slug': application.slug, 'layersetId': layerset.id}) }}"></a>
                {#- this comment eats whitespace -#}
                <a class="iconRemove hover-highlight-effect removeLayerset" title="{{"mb.manager.admin.layerset.delete.title"|trans}} {{layerset.title}}" href="{{ path("mapbender_manager_application_confirmdeletelayerset",{'slug': application.slug, 'layersetId': layerset.id}) }}"></a>
              </th>
            </tr>
          </thead>
          <tbody>
            {% for assignment in layerset.getCombinedInstanceAssignments() %}
            {%- with {
              'instance': assignment.instance,
              '_is_reusable': not assignment.instance.layerset,
              } -%}{%- with {
              '_sort_url': _is_reusable
                  ? path('mapbender_manager_repository_assignmentweight', {'layerset': layerset, 'assignmentId': assignment.id})
                  : path('mapbender_manager_repository_instanceweight', {'slug': application.slug,'layersetId': layerset.id, 'instanceId': assignment.instance.id})
              ,
              '_edit_url': _is_reusable
                  ? path("mapbender_manager_repository_unowned_instance_scoped", {"instanceId": instance.id, "layerset": layerset })
                  : path("mapbender_manager_repository_instance",{"slug": application.slug, "instanceId": instance.id})
                  ,
              '_delete_url': _is_reusable
                  ? path("mapbender_manager_application_detachinstance", {'layerset': layerset, 'assignmentId': assignment.id})
                  : path("mapbender_manager_application_deleteinstance",{"slug": application.slug, 'layersetId': layerset.id, "instanceId": instance.id})
              ,
              '_toggle_url': _is_reusable
                  ? path("mapbender_manager_repository_instanceassignmentenabled", {"assignmentId": assignment.id})
                  : path('mapbender_manager_repository_instanceenabled', {'layerset': layerset, 'instanceId': assignment.instance.id})
            } -%}
              <tr class="sourceinst" data-id="{{ instance.id }}" data-href="{{ _sort_url }}">
                <td class="idColumn description" title="{{ 'mb.manager.admin.layerset.id_description' | trans }}">{{ instance.source.id }}/{{ instance.id }}</td>
                <td class="titleColumn description">{{ instance.title }} ({{ instance.source.title }})</td>
                <td class="typeColumn description text-nowrap"
                  {%- if _is_reusable %}
                    title="{{ "mb.terms.sourceinstance.reusable.singular" | trans }}"><i class="fa fas fa-wifi" ></i>
                  {%- else -%}
                     title="{{ "mb.terms.sourceinstance.bound.singular" | trans }}"><i class="fa fas fa-anchor"></i>
                  {%- endif -%}
                  &nbsp;{{ instance.source.type }}</td>
                <td class="iconColumn text-right">
                  <div class="checkWrapper hover-highlight-effect {{  instance.enabled ? 'iconPublishActive' : 'iconPublish' }} -ft-toggle-active"
                       title="{{"mb.manager.admin.instance.show_hide"|trans}} {{instance.title}}"
                       data-icon-off="iconPublish" data-icon-on="iconPublishActive">
                    <input data-url="{{ _toggle_url }}" type="checkbox" {% if assignment.enabled %} checked="checked" {% endif %}>
                  </div>
                  {#- this comment eats whitespace -#}
                  <a href="{{ _edit_url  }}" class="iconEdit hover-highlight-effect editInstance" title="{{"mb.manager.admin.instance.edit"|trans}} {{instance.title}}"></a>
                  {%- if _delete_url -%}
                  <span data-url="{{ _delete_url }}" class="iconRemove hover-highlight-effect removeInstance" title="{{"mb.manager.admin.instance.delete.title"|trans}} {{instance.title}}" data-id="{{ layerset.id }}" data-slug="{{ application.slug }}"></span>
                  {%- endif -%}
                </td>
              </tr>
            {%- endwith -%}{%- endwith -%}
            {% else %}
              <tr class="dummy">
                <td colspan="4" class="description">{{ 'mb.manager.admin.instance.no_instance_added' | trans }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </li>
    {% endfor %}
  </ul>
{% else %}
  <p class="description">{{ 'mb.manager.admin.instance.no_layer_added' | trans }}</p>
{% endif %}
