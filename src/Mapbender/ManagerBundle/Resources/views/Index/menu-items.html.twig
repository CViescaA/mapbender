{% for item in items %}
  {%- if item.subroutes -%}
  <li class="dropdown bs-dropdown">
    <a href="{{ path(item.route) }}" data-target="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
      {{ item.title|trans }}
      <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
      <li>
        <a href="{{ path(item.route) }}">{{ item.title | trans }}</a>
      </li>
      {% include 'MapbenderManagerBundle:Index:menu-items.html.twig' with {'items': item.subroutes} %}
    </ul>
  </li>
  {%- else -%}
  <li{% if item.active %} class="active"{% endif %}>
    <a href="{{ path(item.route) }}">{{ item.title|trans }}</a>
  </li>
  {%- endif -%}
{% endfor %}
