{% extends "MapbenderManagerBundle::layouts/filtered_list.html.twig" %}

{% block manager_content %}
  {%- set list_id = list_id | default('listFilter0') -%}
  {{- parent() -}}
  {%- if items -%}
  <ul id="{{ list_id }}" class="listFilterBoxes{{ (' ' ~ (list_class | default(''))) | trim(' ', 'right') }}">
    {%- for item in items -%}
    <li class="filterItem">
      {% block boxlist_item_content %}{% endblock %}
    </li>
    {%- endfor -%}
  </ul>
  {%- endif -%}
  <p class="description{{ items ? ' hidden' : ''}}">
    {% block boxlist_placeholder_content %}{% endblock %}
  </p>
{% endblock %}
