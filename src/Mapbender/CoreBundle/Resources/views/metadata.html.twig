        <div class="accordionContainer metadataContainer">
            <div id="accordion-general" class="accordion active">{{ 'mb.wms.metadata.section.common._title' | trans }}</div>
            <div id="container-general" class="container-accordion active">
                {%- include 'MapbenderWmsBundle:Repository:source/view-metadata.html.twig' with {'show_constraints': false} -%}
            </div>
            <div id="accordion-usage" class="accordion">{{ 'mb.wms.metadata.section.useconditions._title' | trans }}</div>
            <div id="container-usage" class="container-accordion">
                <table class="table table-borderless table-condensed">
                    <tr><th>{{ "mb.wms.wmsloader.repo.view.label.fees" | trans }}:</th><td>{{ source.fees }}</td></tr>
                    <tr><th>{{ "mb.wms.wmsloader.repo.view.label.accessconstraints" | trans }}:</th><td>{{ source.accessConstraints }}</td></tr>
                </table>
            </div>
            <div id="accordion-contact" class="accordion">{{ 'mb.wms.metadata.section.contact._title' | trans }}</div>
            <div id="container-contact" class="container-accordion">
                {%- include 'MapbenderManagerBundle:Repository:source/view-contact.html.twig' with {'contact' : source.contact} -%}
            </div>


            {% for section in metadata.sections %}
                {% set vt=prefix~section.title~ "._title" %}
                <div id="accordion{{ loop.index }}" class="accordion{% if loop.first %} active{% endif %}">
                    <div>{{ vt | trans }}</div>
                </div>
                <div id="container{{ loop.index }}" class="container-accordion{% if loop.first %} active{% endif %}">
                    <div class="accordion-cell">
                        <div class="accordion-wrapper">
                            <div>
                                {% include "MapbenderCoreBundle::metadata_section.html.twig"  with {'section': section} %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
