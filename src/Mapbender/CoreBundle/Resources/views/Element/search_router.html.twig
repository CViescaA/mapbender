<div class="mb-element mb-element-searchrouter" id="{{ id }}" title="{{ title | trans }}">
    {{ form_widget(route_select_form) }}

    <div class="search-forms">
        {% for form in search_forms %}
            <form name="{{ form.vars.name }}" autocomplete="off">
                {{ form_widget(form) }}
            </form>
        {% endfor %}
    </div>
    <div class="search-action-buttons hidden">
        <span data-action="reset" class="btn btn-sm btn-default">{{ 'mb.core.searchrouter.popup.btn.reset' | trans }}</span>
        <span data-action="search" class="btn btn-sm btn-default">{{ 'mb.core.searchrouter.popup.btn.ok' | trans }}</span>
    </div>
    <div class="search-results"></div>
</div>
