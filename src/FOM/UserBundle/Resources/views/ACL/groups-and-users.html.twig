{% if (users|length > 0) or (groups|length > 0) %}
  <label for="inputFilterGroupsAndUsers" class="labelInput">{{ 'mb.actions.filter' | trans }}</label>
  <input id="inputFilterGroupsAndUsers" autofocus="autofocus" type="text" class="input listFilterInput"/>
  <div class="clearContainer"></div>

  <table id="listFilterGroupsAndUsers" class="listFilterContainer table">
    <thead>
      <tr class="doNotFilter">
        <th>{{ "fom.user.acl.groups_users.name"|trans }} </th>
      </tr>
    </thead>
    <tbody>
      {% for user in users %}
        <tr class="filterItem">
          <td>
            <div class="checkbox">
              <label>
                <input type="checkbox" data-label="{{ user.getUsername }}"
                       value="u:{{ user.getUsername }}{{ user.getClass is defined ? (':'~user.getClass()) : '' }}" />
                <i class="fa fas fa-user"></i>&nbsp;{{ user.getUsername }}
              </label>
            </div>
          </td>
        </tr>
      {% endfor %}
      {% for group in groups %}
        <tr class="filterItem">
          <td>
            <div class="checkbox">
              <label>
                <input type="checkbox" data-label="{{ group.getTitle() }}"
                       value="r:{{ group.getRole() }}" />
                <i class="fa fas fa-group"></i>&nbsp;{{ group.getTitle() }}
              </label>
            </div>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% else %}
  <p class="description">{{"fom.user.acl.groups_users.no_goups_users"|trans}}</p>
{% endif %}
